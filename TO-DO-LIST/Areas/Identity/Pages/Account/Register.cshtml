@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<h1>@ViewData["Title"]</h1>

<div class="candidate-list row">

    <div class="col-md-10 col-lg-8">

        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="candidate-list-box card mt-2">
                <div class="p-4 card-body">
                    <div class="candidate-list-content mt-3 mt-lg-0">
                        <h5 class="fs-10 mb-0">
                            Email
                        </h5>
                        <div class="filler-job-form mt-2">
                            <i class="uil uil-briefcase-alt"></i>
                            <input aria-required="true" type="email" placeholder="Email Address" asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" class="form-control filler-job-input-box form-control" />
                        </div>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>

                    </div>
                </div>
            </div>

            <div class="candidate-list-box card mt-2">
                <div class="p-4 card-body">
                    <div class="candidate-list-content mt-3 mt-lg-0">
                        <h5 class="fs-10 mb-0">
                            Password
                        </h5>
                        <div class="filler-job-form mt-2">
                            <i class="uil uil-briefcase-alt"></i>
                            <input autocomplete="new-password" aria-required="true" type="password" placeholder="Password" asp-for="Input.Password" class="form-control" autocomplete="password" aria-required="true" class="form-control filler-job-input-box form-control" />
                        </div>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>

                    </div>
                </div>
            </div>

            <div class="candidate-list-box card mt-2">
                <div class="p-4 card-body">
                    <div class="candidate-list-content mt-3 mt-lg-0">
                        <h5 class="fs-10 mb-0">
                            Confirm Password
                        </h5>
                        <div class="filler-job-form mt-2">
                            <i class="uil uil-briefcase-alt"></i>
                            <input autocomplete="new-password" aria-required="true" type="password" placeholder="Confirm Password" asp-for="Input.ConfirmPassword" class="form-control" autocomplete="username" aria-required="true" class="form-control filler-job-input-box form-control" />
                        </div>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

                    </div>
                </div>
            </div>

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary mt-2">Register</button>
        </form>
    </div>

</div>




@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
